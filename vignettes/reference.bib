  journaltitle = {Journal of Ecology},
  urldate = {2017-07-01},
  date = {2008-01-01},
  pages = {18--34},
  keywords = {ecological theory,environmental change,plant communities,positive plant interactions,review,disturbance,competition,facilitation,environmental gradients,stress},
