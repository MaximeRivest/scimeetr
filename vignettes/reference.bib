@article{GuenardPhylogeneticeigenvectormaps2013,
  langid = {english},
  title = {Phylogenetic Eigenvector Maps: A Framework to Model and Predict Species Traits},
  volume = {4},
  issn = {2041-210X},
  url = {http://onlinelibrary.wiley.com.proxy.bib.uottawa.ca/doi/10.1111/2041-210X.12111/abstract},
